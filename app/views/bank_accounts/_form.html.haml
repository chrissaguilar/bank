= simple_form_for bank_account do |f|
  = f.input :account_number, input_html: { class: "form-control" }
  = f.association :client, input_html: {class: "form-control" }

  %hr
  = link_to root_path, class: "btn btn-danger float-right" do
    Cancel
  = button_tag type: :submit, class: "btn btn-primary mr-1 float-right" do
    Save Account