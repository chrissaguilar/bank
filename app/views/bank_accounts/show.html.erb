<h1>Account Number: <%= @bank_account.account_number %>
  <small><%= @bank_account.client %>
  </small>
</h1>

<p>
  <%= button_tag 'New Transaction', id: "btn-transaction", class: "btn btn-primary" %>
  <%#= button_tag :new_transaction, id: "btn-transaction", class: "btn btn-primary" %>
</p>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Date of Transaction</th>
      <th>Transaction Type</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @bank_account.account_transactions.each do |t| %>
      <tr>
        <td><%= t.created_at %></td>
        <td><%= t.transaction_type %></td>
        <td><%= number_to_currency(t.amount, unit: "USD") %></td>
      </tr>
    <% end %>
    <tr>
      <th></th>
      <th>Balance</th>
      <th><%= number_to_currency(@bank_account.balance, unit: "USD ") %></th>
    </tr>
  </tbody>
</table>

<%= javascript_include_tag "bank_accounts/Show" %>
